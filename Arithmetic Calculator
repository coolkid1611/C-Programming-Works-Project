#include <stdio.h>

int main() {
    float num1, num2, result;
    char op;
    
    printf("\n\n\n\t");
    scanf("%f", &num1);
    scanf("%c", &op);
    scanf("%f", &num2);
    
    
    if (op == '+') {
        result = num1+num2;
        printf("\n\n\t%f", result);
    }
    else if (op == '-') {
        
        result = num1-num2;
        printf("\n\n\t%f", result);
    }
    else if (op == '*') {
        
        result = num1*num2;
        printf("\n\n\t%f", result);
    }
    else if (op == '/') {
        
        if (num2 != 0){
        result = num1/num2;
        printf("\n\n\t%f", result);
        }
        else{
            printf("\n\n\tUNDEFINED !!!");
        }
    }
    else{
        printf("\n\n\tYou've entered the invalid operation. Please try again. ");
    }

    return 0;
}

